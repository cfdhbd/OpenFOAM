FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      T;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 1 0 0 0];

internalField   uniform 50;

boundaryField
{
    top
    {
        type            codedMixed;

        refValue        uniform 250;
        refGradient     uniform 0;
        valueFraction   uniform 0;

        redirectType    convectiveHeat;

        code
        #{
            const fvPatchField& T = this->patch().lookupPatchField<volScalarField, scalar>("T");
            this->refGrad() = 100/5*(this->refValue() - T); // dT/dr = h/k*(T_ref - T_boundary)
            this->valueFraction() = 0;
        #};
    }

    left
    {
        type            codedMixed;

        refValue        uniform 250;
        refGradient     uniform 0;
        valueFraction   uniform 0;

        redirectType    convectiveHeat;

        code
        #{
            const fvPatchField& T = this->patch().lookupPatchField<volScalarField, scalar>("T");
            this->refGrad() = 100/5*(this->refValue() - T); // dT/dr = h/k*(T_ref - T_boundary)
            this->valueFraction() = 0;
        #};
    }

    notch
    {
        type            fixedValue;
        value           uniform 50;
    }

    bottom
    {
        type            zeroGradient;
    }

    right
    {
        type            zeroGradient;
    }

    frontAndBack
    {
        type            empty;
    }

}

// ************************************************************************* //
