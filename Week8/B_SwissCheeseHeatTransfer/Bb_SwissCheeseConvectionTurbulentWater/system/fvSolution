FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

solvers
{
    p_rgh
    {
        solver          GAMG;
        tolerance       1e-7;
        relTol          0.02;
        smoother        GaussSeidel;
    }

    "(U|k|epsilon|h)"
    {
        solver          smoothSolver;
        smoother        GaussSeidel;
        tolerance       1e-8;
        relTol          0.02;
        nSweeps         1;
    }
}

SIMPLE
{
    nNonOrthogonalCorrectors 0;
    //consistent      yes;

    residualControl
    {
        p_rgh           1e-4;
        U               1e-5;
        h               1e-5;
        "(k|epsilon)"   1e-5;
    }
}

relaxationFactors
{
    fields
    {
        p_rgh               0.5;
    }
    equations
    {
        U               0.7;
        "(k|epsilon)"   0.7;
        h               0.7;
    }
}


